{
  "title": "Rate Limiter Service",
  "uid": "rate-limiter",
  "version": 1,
  "schemaVersion": 36,
  "refresh": "10s",
  "panels": [
    {
      "id": 1,
      "title": "HTTP Requests per Second",
      "type": "graph",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "rate(http_server_requests_seconds_count[1m])",
          "legendFormat": "{{instance}} - {{uri}}"
        }
      ]
    },
    {
      "id": 2,
      "title": "Average Response Time (ms)",
      "type": "graph",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "rate(http_server_requests_seconds_sum[1m]) / rate(http_server_requests_seconds_count[1m]) * 1000",
          "legendFormat": "avg ms {{instance}} {{uri}}"
        }
      ]
    },
    {
      "id": 3,
      "title": "JVM Heap Memory Used (MB)",
      "type": "graph",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "sum(jvm_memory_used_bytes{area='heap'}) by (instance) / 1024 / 1024",
          "legendFormat": "Heap MB {{instance}}"
        }
      ]
    },
    {
      "id": 4,
      "title": "Live JVM Threads",
      "type": "stat",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "targets": [
        {
          "expr": "jvm_threads_live_threads",
          "legendFormat": "Threads {{instance}}"
        }
      ]
    }
  ]
}